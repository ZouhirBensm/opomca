      data-image-src="<%= welcome_section_fr.banner_img_path %>" alt="<%= welcome_section_fr.banner_img_alt %>">

      <%- include('body/welcome-section/part1.ejs') %>

        <div class="tm-bg-black-transparent tm-welcome-container">
          <div class="container-fluid">


            <div class="row h-100">

              <%- include('body/welcome-section/part2.ejs') %>

            </div>
          </div>
        </div>
    </section>
    <!-- End Welcome section -->







    <!-- Portfolio section -->
    <section id="tmPortfolio">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">

            <div class="tm-extra-service-description">


              <h2>Pavage Laval Asphalte Laval Earnanswers</h2>


              <p>Looking for top-quality paving and asphalt services in Laval? Paving Laval Asphalt Laval Earnanswers provides professional installation and landscaping solutions, specializing in residential and commercial paving projects. Let us handle your next paving project with precision and care. We are the best Paving asphalt near me and in Laval!<br/><br/>Vous recherchez des services de pavage et d'asphaltage de qualité supérieure à Laval ? Pavage Laval Asphalte Laval Earnanswers propose des solutions professionnelles d'installation et d'aménagement paysager, spécialisées dans les projets de pavage résidentiels et commerciaux. Laissez-nous gérer votre prochain projet de pavage avec précision et soin. Nous sommes les meilleurs Pavage d'asphalte près de chez moi et à Laval !</p>

              <br/><br/>


              <h2 class="tm-text-orange">Review</h2>

              <div id="swapped">
                <!-- Trigger/Open The Modal -->
                <button id="openModalBtn">Write a review</button>

                <!-- The Modal -->
                <!-- <dialog id="myModal">
                <p>This is a modal dialog!</p>
                <button id="closeModalBtn">Close</button>
              </dialog> -->


                <!-- The Modal -->
                <dialog id="myModal">
                  <p>Please rate:</p>
                  <div class="star-rating">
                    <input type="radio" id="star5" name="rating" value="5">
                    <label for="star5">★</label>
                    <input type="radio" id="star4" name="rating" value="4">
                    <label for="star4">★</label>
                    <input type="radio" id="star3" name="rating" value="3">
                    <label for="star3">★</label>
                    <input type="radio" id="star2" name="rating" value="2">
                    <label for="star2">★</label>
                    <input type="radio" id="star1" name="rating" value="1">
                    <label for="star1">★</label>
                  </div>
                  <input class="review-input" placeholder="Write your username here..." />
                  <textarea class="review-input" placeholder="Write your review here..."></textarea>
                  <div class="button-container">
                    <button id="postReviewBtn">Post</button>
                    <button id="closeModalBtn">Close</button>
                  </div>
                </dialog>

              </div>

            </div>



            <script>
              const postReviewBtn = document.getElementById('postReviewBtn');
              const swappedDiv = document.getElementById('swapped');




              const openModalBtn = document.getElementById('openModalBtn');
              const closeModalBtn = document.getElementById('closeModalBtn');
              const myModal = document.getElementById('myModal');

              openModalBtn.addEventListener('click', () => {
                myModal.showModal();
              });

              closeModalBtn.addEventListener('click', () => {
                myModal.close();
              });


              postReviewBtn.addEventListener('click', () => {
                myModal.close(); // Close the modal
                swappedDiv.innerHTML = '<p style="color: green;">Thanks for your review!</p>';

              });


            </script>





          </div>
        </div>
      </div>
    </section>
    <!-- End portfolio section -->






    <%- include('footer/footer.ejs') %>



</body>





</html>